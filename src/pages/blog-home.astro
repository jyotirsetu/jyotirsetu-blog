---
import JyotirsetuBlogLayout from '~/layouts/JyotirsetuBlogLayout.astro';
import JyotirsetuBlogHero from '~/components/JyotirsetuBlogHero.astro';
import JyotirsetuBlogGrid from '~/components/JyotirsetuBlogGrid.astro';
import JyotirsetuWeeklyHoroscope from '~/components/JyotirsetuWeeklyHoroscope.astro';
import JyotirsetuNewsletter from '~/components/JyotirsetuNewsletter.astro';

// Sample blog posts data
const featuredPosts = [
  {
    title: "Understanding Vedic Astrology: Your Cosmic Blueprint",
    excerpt: "Discover the ancient wisdom of Vedic Astrology and how it can guide your life journey with precision and clarity.",
    image: "/images/blog-images/vedic-astrology/understanding-birth-charts.jpg",
    category: "Vedic Astrology",
    author: "Astrologer Punita Sharma",
    publishDate: "2024-01-15",
    readingTime: 8,
    slug: "understanding-vedic-astrology"
  },
  {
    title: "Palmistry Guide: Reading Your Life Lines",
    excerpt: "Learn the art of palmistry and discover what your hands reveal about your personality, career, and relationships.",
    image: "/images/blog-images/palmistry/palmistry-guide.jpg",
    category: "Palmistry",
    author: "Astrologer Punita Sharma",
    publishDate: "2024-01-12",
    readingTime: 6,
    slug: "palmistry-guide-beginners"
  },
  {
    title: "Numerology: The Power of Numbers in Your Life",
    excerpt: "Explore how numbers influence your life path, personality, and destiny through the ancient science of numerology.",
    image: "/images/blog-images/numerology/numerology-power.jpg",
    category: "Numerology",
    author: "Astrologer Punita Sharma",
    publishDate: "2024-01-10",
    readingTime: 7,
    slug: "numerology-power-numbers"
  }
];

const recentPosts = [
  {
    title: "Weekly Horoscope: January 15-21, 2024",
    excerpt: "Your cosmic forecast for this week. Discover what the stars have in store for all zodiac signs.",
    image: "/images/horoscopes/2024-01-15/weekly-horoscope-featured.jpg",
    category: "Weekly Horoscopes",
    author: "Astrologer Punita Sharma",
    publishDate: "2024-01-15",
    readingTime: 5,
    slug: "weekly-horoscope-january-15-21-2024"
  },
  {
    title: "Spiritual Guidance: Finding Your Inner Peace",
    excerpt: "Learn powerful meditation techniques and spiritual practices to find inner peace and balance in your daily life.",
    image: "/images/blog-images/spiritual-guidance/inner-peace.jpg",
    category: "Spiritual Guidance",
    author: "Astrologer Punita Sharma",
    publishDate: "2024-01-08",
    readingTime: 9,
    slug: "spiritual-guidance-inner-peace"
  },
  {
    title: "Success Story: How Astrology Changed My Career Path",
    excerpt: "Read how our client discovered their true calling through Vedic astrology and transformed their professional life.",
    image: "/images/blog-images/success-stories/career-transformation.jpg",
    category: "Success Stories",
    author: "Client Testimonial",
    publishDate: "2024-01-05",
    readingTime: 6,
    slug: "success-story-career-transformation"
  }
];

const metadata = {
  title: 'JyotirSetu Cosmic Insights Blog - Astrology, Palmistry & Numerology',
  description: 'Discover cosmic insights, weekly horoscopes, and spiritual guidance from JyotirSetu Astrology Blog. Expert astrology, palmistry, and numerology content.',
  openGraph: {
    type: 'website',
    site_name: 'JyotirSetu Cosmic Insights Blog',
    images: [
      {
        url: '/images/blog-images/jyotirsetu-blog-og.jpg',
        width: 1200,
        height: 630,
        alt: 'JyotirSetu Cosmic Insights Blog'
      }
    ]
  }
};
---

<JyotirsetuBlogLayout metadata={metadata}>
  <!-- Hero Section -->
  <JyotirsetuBlogHero />

  <!-- Featured Posts Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Featured Cosmic Insights
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          Explore our most popular articles on Vedic Astrology, Palmistry, and Numerology. 
          Discover the ancient wisdom that can guide your life journey.
        </p>
      </div>
      
      <JyotirsetuBlogGrid posts={featuredPosts} />
      
      <div class="text-center mt-12">
        <a 
          href="/vedic-astrology" 
          class="jyotirsetu-blog-btn"
        >
          Explore All Articles
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Weekly Horoscope Section -->
  <section class="py-16 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          This Week's Cosmic Forecast
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          Discover what the stars have in store for you this week. Get personalized insights for all zodiac signs.
        </p>
      </div>
      
      <JyotirsetuWeeklyHoroscope />
      
      <div class="text-center mt-12">
        <a 
          href="/horoscopes" 
          class="jyotirsetu-blog-btn jyotirsetu-blog-btn-outline"
        >
          View All Horoscopes
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Recent Posts Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Latest Cosmic Wisdom
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          Stay updated with our latest articles, success stories, and spiritual guidance.
        </p>
      </div>
      
      <JyotirsetuBlogGrid posts={recentPosts} />
      
      <div class="text-center mt-12">
        <a 
          href="/all-posts" 
          class="jyotirsetu-blog-btn"
        >
          View All Posts
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <JyotirsetuNewsletter />

  <!-- Call to Action Section -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready for Your Personal Cosmic Reading?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Get personalized insights from our expert astrologer. Book your consultation today and discover what the stars have in store for you.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://www.jyotirsetu.com/ScheduleAppointmentJyotirSetu"
          data-appointment-btn
          class="inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-full hover:bg-gray-100 transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Book Your Appointment
        </a>
        <a 
          href="https://www.jyotirsetu.com/about"
          class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-blue-600 transition-colors duration-200"
        >
          Learn More About Us
        </a>
      </div>
    </div>
  </section>
</JyotirsetuBlogLayout>
