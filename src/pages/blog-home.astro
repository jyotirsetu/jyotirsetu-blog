---

<JyotirsetuBlogLayout metadata={metadata}>
  <!-- Hero Section -->
  <JyotirsetuBlogHero />

  <!-- Featured Posts Section -->
  <section class="py-16 bg-gradient-to-br from-slate-50 to-blue-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12 scroll-reveal">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-4 font-heading">
          Featured Cosmic Insights
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Discover the most popular articles and guides from our expert astrologers
        </p>
      </div>
      <div class="scroll-reveal">
        <JyotirsetuBlogGrid posts={featuredPosts} />
      </div>
    </div>
  </section>

  <!-- Weekly Horoscope Section -->
  <div class="scroll-reveal">
    <JyotirsetuWeeklyHoroscope />
  </div>

  <!-- Recent Posts Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12 scroll-reveal">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-4 font-heading">
          Latest Cosmic Wisdom
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Stay updated with our latest articles, insights, and spiritual guidance
        </p>
      </div>
      <div class="scroll-reveal">
        <JyotirsetuBlogGrid posts={recentPosts} />
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <div class="scroll-reveal">
    <JyotirsetuNewsletter />
  </div>
</JyotirsetuBlogLayout>