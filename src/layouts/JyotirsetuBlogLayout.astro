        theme: {
          extend: {
            colors: {
              primary: '#3b82f6',
              secondary: '#8b5cf6',
              accent: '#ec4899',
              'jyotirsetu-blue': '#1e40af',
              'jyotirsetu-purple': '#7c3aed',
              'jyotirsetu-gold': '#f59e0b',
            },
            fontFamily: {
