---
import JyotirsetuBlogHeader from '../components/JyotirsetuBlogHeader.astro';
import JyotirsetuBlogFooter from '../components/JyotirsetuBlogFooter.astro';
import JyotirsetuBlogFavicons from '../components/JyotirsetuBlogFavicons.astro';
import ThemeProvider from '../components/ThemeProvider.astro';

export interface Props {
  metadata?: {
    title?: string;
    description?: string;
    openGraph?: {
      title?: string;
      description?: string;
      type?: string;
      url?: string;
      image?: string;
    };
    twitter?: {
      card?: string;
      title?: string;
      description?: string;
      image?: string;
    };
  };
}

const { metadata = {} } = Astro.props;

const {
  title = 'JyotirSetu Cosmic Insights Blog - Astrology, Palmistry & Numerology',
  description = 'Discover cosmic insights, weekly horoscopes, and spiritual guidance from JyotirSetu Astrology Blog. Expert astrology, palmistry, and numerology content.',
  openGraph = {},
  twitter = {}
} = metadata;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <JyotirsetuBlogFavicons />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={openGraph.title || title} />
    <meta property="og:description" content={openGraph.description || description} />
    <meta property="og:type" content={openGraph.type || 'website'} />
    <meta property="og:url" content={openGraph.url || 'https://blog.jyotirsetu.com'} />
    <meta property="og:image" content={openGraph.image || '/images/cosmic-backgrounds/hero-bg.jpg'} />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content={twitter.card || 'summary_large_image'} />
    <meta name="twitter:title" content={twitter.title || title} />
    <meta name="twitter:description" content={twitter.description || description} />
    <meta name="twitter:image" content={twitter.image || '/images/cosmic-backgrounds/hero-bg.jpg'} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={openGraph.url || 'https://blog.jyotirsetu.com'} />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Google Fonts - Matching JyotirSetu website -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    
    <!-- Tailwind CSS - Local File -->
    <link rel="stylesheet" href="/tailwind.css" />
    
    <!-- Theme Provider -->
    <ThemeProvider defaultTheme="system" enableSystemTheme={true} />
    
    <!-- Custom Styles - Matching Main Website Exactly -->
    <style>
      :root {
        --aw-font-sans: 'Inter Variable';
        --aw-font-serif: 'ui-serif';
        --aw-font-heading: 'Inter Variable';

        --aw-color-primary: rgb(1 97 239);
        --aw-color-secondary: rgb(1 84 207);
        --aw-color-accent: rgb(109 40 217);

        --aw-color-text-heading: rgb(0 0 0);
        --aw-color-text-default: rgb(16 16 16);
        --aw-color-text-muted: rgb(16 16 16 / 66%);
        --aw-color-bg-page: rgb(255 255 255);

        --aw-color-bg-page-dark: rgb(3 6 32);
      }

      .dark {
        --aw-color-text-heading: rgb(247, 248, 248);
        --aw-color-text-default: rgb(229 236 246);
        --aw-color-text-muted: rgb(229 236 246 / 66%);
        --aw-color-bg-page: rgb(3 6 32);
      }

      /* Main website CSS utilities */
      .bg-page {
        background-color: var(--aw-color-bg-page);
      }
      .bg-dark {
        background-color: var(--aw-color-bg-page-dark);
      }
      .text-muted {
        color: var(--aw-color-text-muted);
      }
      
      body {
        font-family: 'Inter', ui-sans-serif, system-ui;
        line-height: 1.6;
      }
      
      .font-heading {
        font-family: 'Poppins', ui-sans-serif, system-ui;
      }
      
      /* JyotirSetu Brand Colors */
      .jyotirsetu-gradient {
        background: linear-gradient(135deg, #1e40af 0%, #7c3aed 50%, #f59e0b 100%);
      }
      
      .jyotirsetu-text-gradient {
        background: linear-gradient(135deg, #1e40af 0%, #7c3aed 50%, #f59e0b 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .jyotirsetu-card {
        background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.1);
      }
      
      .dark .jyotirsetu-card {
        background: linear-gradient(145deg, #1e293b 0%, #334155 100%);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(59, 130, 246, 0.2);
      }
      
      .jyotirsetu-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
      }
      
      .dark .jyotirsetu-card:hover {
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
      }
      
      /* Cosmic Background Effects */
      .cosmic-bg {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 25%, #334155 50%, #1e293b 75%, #0f172a 100%);
        position: relative;
        overflow: hidden;
      }
      
      .cosmic-bg::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
          radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(124, 58, 237, 0.1) 0%, transparent 50%),
          radial-gradient(circle at 40% 40%, rgba(245, 158, 11, 0.1) 0%, transparent 50%);
        animation: pulse-slow 4s ease-in-out infinite;
      }
      
      /* Button Styles */
      .jyotirsetu-btn {
        background: linear-gradient(135deg, #1e40af 0%, #7c3aed 100%);
        color: white;
        padding: 12px 24px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 64, 175, 0.3);
      }
      
      .jyotirsetu-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(30, 64, 175, 0.4);
        background: linear-gradient(135deg, #1d4ed8 0%, #8b5cf6 100%);
      }
      
      .jyotirsetu-btn-outline {
        background: transparent;
        border: 2px solid #1e40af;
        color: #1e40af;
        box-shadow: none;
      }
      
      .jyotirsetu-btn-outline:hover {
        background: #1e40af;
        color: white;
      }
      
      /* Navigation Styles */
      .nav-link {
        position: relative;
        color: #64748b;
        font-weight: 500;
        transition: color 0.3s ease;
      }
      
      .nav-link:hover {
        color: #1e40af;
      }
      
      .nav-link.active {
        color: #1e40af;
      }
      
      .nav-link.active::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(135deg, #1e40af 0%, #7c3aed 100%);
        border-radius: 1px;
      }
      
      /* Mobile Menu */
      .mobile-menu {
        display: none;
      }
      
      .mobile-menu.active {
        display: block;
      }
      
      /* Hamburger Animation */
      [data-aw-toggle-menu] {
        position: relative;
        width: 24px;
        height: 24px;
        cursor: pointer;
      }
      
      [data-aw-toggle-menu] svg {
        transition: all 0.3s ease;
      }
      
      [data-aw-toggle-menu].expanded svg {
        transform: rotate(90deg);
      }
      
      /* Mobile Menu Styling */
      .mobile-menu {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border-top: 1px solid #e5e7eb;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        z-index: 50;
      }
      
      .dark .mobile-menu {
        background: #111827; /* gray-900 to match header */
        border-top-color: #374151;
      }
      
      .mobile-menu .dropdown-menu {
        display: none;
        padding-left: 1rem;
        background: #f9fafb;
        border-radius: 0.375rem;
        margin: 0.25rem 0;
      }
      
      .dark .mobile-menu .dropdown-menu {
        background: #111827; /* gray-900 to match header */
      }
      
      .mobile-menu .dropdown-menu.active {
        display: block;
      }
      
      /* Desktop Dropdown Styles */
      .dropdown {
        position: relative;
      }
      
      .dropdown-menu {
        position: fixed;
        top: auto;
        left: auto;
        z-index: 1000;
        min-width: 200px;
        background: #111827 !important; /* gray-900 to match header */
        border: 1px solid #374151;
        border-radius: 0.375rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
        padding: 0.5rem 0;
        margin-top: 0.25rem;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all 0.2s ease;
        pointer-events: none;
        display: none !important;
        backdrop-filter: none !important;
      }
      
      .dark .dropdown-menu {
        background: #111827 !important; /* gray-900 to match header */
        border-color: #374151;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
        backdrop-filter: none !important;
      }
      
      /* Force solid background for all dropdown menus */
      .dropdown-menu,
      .dark .dropdown-menu,
      .light .dropdown-menu {
        background: #111827 !important; /* gray-900 to match header */
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
        opacity: 1 !important;
        background-color: #111827 !important;
        background-image: none !important;
      }
      
      /* Additional rules to remove any transparency */
      .dropdown-menu * {
        background: transparent !important;
      }
      
      .dropdown-menu li {
        background: transparent !important;
      }
      
      .dropdown-menu a {
        background: transparent !important;
      }
      
      /* Override any potential Tailwind classes */
      .dropdown-menu.bg-white,
      .dropdown-menu.bg-gray-100,
      .dropdown-menu.bg-opacity-90,
      .dropdown-menu.bg-opacity-80,
      .dropdown-menu.bg-opacity-75,
      .dropdown-menu.bg-opacity-50,
      .dropdown-menu.bg-opacity-25,
      .dropdown-menu.bg-opacity-10 {
        background: #111827 !important;
        opacity: 1 !important;
        background-color: #111827 !important;
        background-image: none !important;
      }
      
      /* Force solid background for all possible states */
      .dropdown-menu:not(.hidden) {
        background: #111827 !important;
        background-color: #111827 !important;
        opacity: 1 !important;
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
      }
      
      /* Override any inline styles or computed styles */
      .dropdown-menu[style*="opacity"],
      .dropdown-menu[style*="background"] {
        background: #111827 !important;
        background-color: #111827 !important;
        opacity: 1 !important;
      }
      
      .dropdown-menu.hidden {
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        display: none !important;
      }
      
      .dropdown-menu:not(.hidden) {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
        pointer-events: auto;
        display: block !important;
      }
      
      /* Dropdown link styles for readability */
      .dropdown-menu a {
        color: #ffffff !important;
        font-weight: 500;
        padding: 0.5rem 1rem;
        display: block;
        transition: all 0.2s ease;
      }
      
      .dropdown-menu a:hover {
        color: #ffffff !important;
        background-color: #374151;
      }
      
      /* Hover effect for desktop */
      @media (min-width: 768px) {
        .dropdown:hover .dropdown-menu {
          opacity: 1;
          visibility: visible;
          transform: translateY(0);
          pointer-events: auto;
        }
      }
      
      /* Mobile dropdown styles */
      @media (max-width: 768px) {
        .dropdown-menu {
          position: static;
          box-shadow: none;
          border: none;
          background: #f9fafb;
          margin: 0.25rem 0;
          padding-left: 1rem;
        }
        
        .dark .dropdown-menu {
          background: #111827; /* gray-900 to match header */
        }
      }
      
      /* Responsive Design */
      @media (max-width: 768px) {
        .jyotirsetu-card {
          margin: 0 10px;
        }
        
        .cosmic-bg::before {
          background-size: 200% 200%;
        }
      }
      
      /* Loading Animation */
      .loading {
        opacity: 0;
        animation: fadeIn 0.5s ease-in-out forwards;
      }
      
      /* Scroll Animations */
      .scroll-reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s ease;
      }
      
      .scroll-reveal.revealed {
        opacity: 1;
        transform: translateY(0);
      }
    </style>
    
    <!-- Mobile Menu JavaScript -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        // Mobile menu toggle functionality
        const toggleButton = document.querySelector('[data-aw-toggle-menu]');
        const mobileMenu = document.querySelector('.mobile-menu');
        const body = document.body;
        
        if (toggleButton && mobileMenu) {
          toggleButton.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            // Toggle mobile menu visibility
            mobileMenu.classList.toggle('hidden');
            mobileMenu.classList.toggle('active');
            
            // Toggle hamburger animation
            toggleButton.classList.toggle('expanded');
            
            // Prevent body scroll when menu is open
            if (mobileMenu.classList.contains('active')) {
              body.style.overflow = 'hidden';
            } else {
              body.style.overflow = '';
            }
          });
          
          // Close menu when clicking outside
          document.addEventListener('click', function(e) {
            if (!toggleButton.contains(e.target) && !mobileMenu.contains(e.target)) {
              mobileMenu.classList.add('hidden');
              mobileMenu.classList.remove('active');
              toggleButton.classList.remove('expanded');
              body.style.overflow = '';
            }
          });
          
          // Close menu when clicking on menu links
          const menuLinks = mobileMenu.querySelectorAll('a');
          menuLinks.forEach(link => {
            link.addEventListener('click', function() {
              mobileMenu.classList.add('hidden');
              mobileMenu.classList.remove('active');
              toggleButton.classList.remove('expanded');
              body.style.overflow = '';
            });
          });
        }
        
        // Dropdown functionality for both desktop and mobile
        function initDropdowns() {
          const dropdownButtons = document.querySelectorAll('.dropdown button');
          console.log('Found dropdown buttons:', dropdownButtons.length);
          
          dropdownButtons.forEach(button => {
            button.addEventListener('click', function(e) {
              e.preventDefault();
              e.stopPropagation();
              
              console.log('Dropdown button clicked');
              const dropdown = this.closest('.dropdown');
              const menu = dropdown.querySelector('.dropdown-menu');
              
              if (menu) {
                console.log('Menu found, toggling...');
                // Close all other dropdowns first
                document.querySelectorAll('.dropdown-menu').forEach(otherMenu => {
                  if (otherMenu !== menu) {
                    otherMenu.classList.add('hidden');
                    otherMenu.style.display = 'none';
                  }
                });
                
                // Toggle current dropdown
                if (menu.classList.contains('hidden')) {
                  // Show dropdown
                  const buttonRect = button.getBoundingClientRect();
                  menu.style.position = 'fixed';
                  menu.style.top = (buttonRect.bottom + 4) + 'px';
                  menu.style.left = buttonRect.left + 'px';
                  menu.style.display = 'block';
                  menu.style.background = '#111827';
                  menu.style.backgroundColor = '#111827';
                  menu.style.opacity = '1';
                  menu.style.backdropFilter = 'none';
                  menu.style.webkitBackdropFilter = 'none';
                  menu.classList.remove('hidden');
                } else {
                  // Hide dropdown
                  menu.classList.add('hidden');
                  menu.style.display = 'none';
                }
                console.log('Menu classes after toggle:', menu.className);
              } else {
                console.log('Menu not found');
              }
            });
          });
        }
        
        // Initialize dropdowns
        initDropdowns();
        
        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
          if (!e.target.closest('.dropdown')) {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
              menu.classList.add('hidden');
              menu.style.display = 'none';
            });
          }
        });
      });
    </script>
  </head>
  <body class="antialiased text-default bg-page tracking-tight">
    <!-- Header -->
    <JyotirsetuBlogHeader 
      isSticky={false}
      showToggleTheme={true}
      position="center"
    />
    
    <!-- Main Content -->
    <main class="loading">
      <slot />
    </main>
    
    <!-- Footer -->
    <JyotirsetuBlogFooter 
      links={[]}
      secondaryLinks={[]}
      socialLinks={[]}
    />
  </body>
</html>