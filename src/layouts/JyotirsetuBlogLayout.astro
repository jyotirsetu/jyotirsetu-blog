        color: white;
      }
      
      /* Navigation Styles */
      .nav-link {
        position: relative;
        color: #64748b;
        font-weight: 500;
        transition: color 0.3s ease;
      }
      
      .nav-link:hover {
        color: #1e40af;
      }
      
      .nav-link.active {
        color: #1e40af;
      }
      
      .nav-link.active::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(135deg, #1e40af 0%, #7c3aed 100%);
        border-radius: 1px;
      }
      
      /* Mobile Menu */
