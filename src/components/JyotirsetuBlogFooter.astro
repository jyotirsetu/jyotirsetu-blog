---
const footerLinks = {
  main: [
    { name: 'Home', href: 'https://www.jyotirsetu.com' },
    { name: 'About', href: 'https://www.jyotirsetu.com/about' },
    { name: 'Services', href: 'https://www.jyotirsetu.com/#services' },
    { name: 'Blog', href: '/' },
    { name: 'Contact', href: 'https://www.jyotirsetu.com/contact' },
  ],
  blog: [
    { name: 'Weekly Horoscopes', href: '/horoscopes' },
    { name: 'Vedic Astrology', href: '/vedic-astrology' },
    { name: 'Palmistry', href: '/palmistry' },
    { name: 'Numerology', href: '/numerology' },
    { name: 'Spiritual Guidance', href: '/spiritual-guidance' },
    { name: 'Success Stories', href: '/success-stories' },
  ],
  services: [
    { name: 'Birth Chart Analysis', href: 'https://www.jyotirsetu.com/#services' },
    { name: 'Palm Reading', href: 'https://www.jyotirsetu.com/#services' },
    { name: 'Numerology Consultation', href: 'https://www.jyotirsetu.com/#services' },
    { name: 'Spiritual Guidance', href: 'https://www.jyotirsetu.com/#services' },
    { name: 'Book Appointment', href: 'https://www.jyotirsetu.com/ScheduleAppointmentJyotirSetu' },
  ],
  support: [
    { name: 'Privacy Policy', href: 'https://www.jyotirsetu.com/privacy' },
    { name: 'Terms of Service', href: 'https://www.jyotirsetu.com/terms' },
    { name: 'FAQ', href: 'https://www.jyotirsetu.com/faq' },
    { name: 'Support', href: 'https://www.jyotirsetu.com/contact' },
  ],
};

const socialLinks = [
  { name: 'Instagram', href: 'https://www.instagram.com/jyotirsetu', icon: 'instagram' },
  { name: 'Facebook', href: '#', icon: 'facebook' },
  { name: 'Twitter', href: '#', icon: 'twitter' },
  { name: 'YouTube', href: '#', icon: 'youtube' },
];
---

<footer class="bg-gradient-to-br from-slate-900 via-blue-900 to-purple-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-3 mb-4">
          <img 
            src="https://www.jyotirsetu.com/JyotirSetu%20Full%20Logo%20Transparent.png" 
            alt="JyotirSetu Logo" 
            class="h-12 w-auto"
          />
          <div>
            <h3 class="text-xl font-bold">JyotirSetu</h3>
            <p class="text-sm text-blue-200">Cosmic Insights Blog</p>
          </div>
        </div>
        <p class="text-gray-300 text-sm mb-4">
          Discover cosmic insights, weekly horoscopes, and spiritual guidance from our expert astrologers. 
          Your bridge to cosmic light and wisdom.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="text-gray-400 hover:text-white transition-colors duration-200"
              aria-label={social.name}
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                {social.icon === 'instagram' && (
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297z"/>
                )}
                {social.icon === 'facebook' && (
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                )}
                {social.icon === 'twitter' && (
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                )}
                {social.icon === 'youtube' && (
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                )}
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {footerLinks.main.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Blog Categories -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Blog Categories</h3>
        <ul class="space-y-2">
          {footerLinks.blog.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Services</h3>
        <ul class="space-y-2">
          {footerLinks.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-400 text-sm mb-4 md:mb-0">
          © 2024 JyotirSetu. All rights reserved. | 
          <a href="https://www.jyotirsetu.com/privacy" class="hover:text-white transition-colors">Privacy Policy</a> | 
          <a href="https://www.jyotirsetu.com/terms" class="hover:text-white transition-colors">Terms of Service</a>
        </div>
        <div class="text-gray-400 text-sm">
          Made with ❤️ for cosmic guidance
        </div>
      </div>
    </div>
  </div>
</footer>