    { name: 'Success Stories', href: 'https://www.jyotirsetu.com/success-stories' },
    { name: 'Testimonials', href: 'https://www.jyotirsetu.com/testimonials' },
    { name: 'Contact', href: 'https://www.jyotirsetu.com/contact' },
